{
  "name": "@swapbills/xchange-rate",
  "version": "1.1.7",
  "description": "A simple wrapper around google finance API for retrieving the exchange rate between two currencies, use at your own risk.",
  "main": "lib/index.js",
  "keywords": [
    "node",
    "google finance",
    "exchange rate"
  ],
  "homepage": "https://github.com/swapbills/xchange-rate",
  "bugs": "https://github.com/swapbills/xchange-rate/issues",
  "repository": "xchange-rate",
  "license": "MIT",
  "author": {
    "name": "Rubin Apore",
    "email": "rubin.apore@gmail.com"
  },
  "engines": {
    "node": ">=4.2.6"
  },
  "scripts": {
    "start": "babel-node src/index.js & npm run watch",
    "test": "nyc ava",
    "lint": "./node_modules/.bin/standard",
    "lint:fix": "./node_modules/.bin/standard --fix",
    "build": "npm run lint && npm run test && babel -d lib/ src/; cp src/data.json lib/data.json",
    "watch": "onchange './src/*' -- npm run type:check",
    "type:check": "flow check",
    "postversion": "git push origin --tags"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.4.5",
    "babel-core": "^6.4.5",
    "babel-eslint": "^8.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.4.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-runtime": "^6.26.0",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "flow-bin": "^0.22.0",
    "mocha": "^2.4.5",
    "nock": "^9.0.14",
    "nyc": "^11.2.1",
    "onchange": "^2.0.0",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "cheerio": "^0.22.0",
    "request": "^2.81.0"
  },
  "ava": {
    "files": [
      "**/**.spec.js",
      "!src/index.js",
      "!dist/**/*"
    ],
    "require": [
      "babel-register"
    ],
    "concurrency": 5,
    "babel": {
      "babelrc": true,
      "sourceMaps": "inline"
    }
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "exclude": [
      "dist/**/*",
      "**/*.spec.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
