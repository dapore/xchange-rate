{
  "name": "@swapbills/xchange-rate",
  "version": "1.0.3",
  "description": "A simple wrapper around google finance API for retrieving the exchange rate between two currencies, use at your own risk.",
  "main": "./build/lib/index.js",
  "keywords": [
    "node"
  ],
  "homepage": "https://github.com/swapbills/xchange-rate",
  "bugs": "https://github.com/swapbills/xchange-rate/issues",
  "repository": "xchange-rate",
  "license": "MIT",
  "author": {
    "name": "Rubin Apore",
    "email": "rubin.apore@gmail.com"
  },
  "jsnext:main": "./index.js",
  "bin": {},
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "asyncbox": "^2.0.2",
    "babel-runtime": "^5.1.9",
    "bluebird": "^2.9.25",
    "cheerio": "^0.22.0",
    "david": "^6.1.6",
    "npm": "^2.9.0",
    "q": "^1.2.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.0",
    "sample-apps": "^2.0.1",
    "source-map-support": "^0.2.10",
    "wd": "^0.3.11"
  },
  "scripts": {
    "prepublish": "./node_modules/.bin/gulp prepublish",
    "test": "./node_modules/.bin/gulp once",
    "watch": "./node_modules/.bin/gulp",
    "run": "mocha ./build/lib/test.js"
  },
  "devDependencies": {
    "appium-gulp-plugins": "^1.1.0",
    "chai": "^2.2.0",
    "chai-as-promised": "^4.3.0",
    "gulp": "^3.8.11",
    "gulp-tap": "^0.1.3",
    "mochawait": "^2.0.0",
    "yargs": "^3.7.1"
  },
  "ava": {
    "files": [
      "**/*.spec.js",
      "!dist/**/*"
    ],
    "require": [
      "babel-register",
      "babel-polyfill",
      "isomorphic-fetch"
    ],
    "babel": {
      "babelrc": true,
      "sourceMaps": "inline"
    }
  },
  "nyc": {
    "check-coverage": false,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "exclude": [
      "./lib/mocks/*.js",
      "./app/*.js",
      "./bin/**/*.js",
      "**/index.js",
      "./dist/**/*.js",
      "**/*.spec.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "fetch"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-idiomatic-order"
    ]
  },
  "engines": {
    "node": "^6.9.5"
  }
}
